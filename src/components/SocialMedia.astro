---
import { Icon } from "astro-icon/components";
---

<div class="social-media-container">
  <a href="https://www.linkedin.com/in/haoweikao" class="social-media">
    <Icon name="linkedin" />
  </a>
  <a href="https://twitter.com/daniel_newheart" class="social-media">
    <Icon name="twitterX" />
  </a>
  <a href="https://www.instagram.com/daniel_newheart" class="social-media">
    <Icon name="instagram" />
  </a>
</div>

<style>
  .social-media-container {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
  }

  @media (min-width: 52rem) {
    .social-media-container {
      flex-direction: column;

      position: absolute;
      right: 1.5rem;
      top: 50vh;

      max-width: 1.5rem;
    }
  }
</style>
