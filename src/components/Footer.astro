---
const { contact } = Astro.props;
---

<footer class="footer">
  <ul class="contact-list">
    {
      contact.map((item) => (
        <li>
          <a href={item.link}>{item.name}</a>
        </li>
      ))
    }
  </ul>
  <h2 class="footer-title">Let's Connect</h2>
  <div class="last-line">
    <p>/ @Hao-Wei Kao 2024</p>
    <p>Crafted by Hao-Wei Kao with ❤️</p>
  </div>
</footer>

<style>
  .footer {
    margin-top: 2rem;
    padding: 2rem 1.62rem;
    background-color: var(--color-primary);
    color: var(--color-neutral);

    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }
  .contact-list {
    grid-column: span 2;
    text-align: right;
    font-size: clamp(1rem, 0.2rem + 2vw, 1.25rem);
    font-weight: 300;

    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .footer-title {
    grid-column: span 2;
    font-size: clamp(2.5rem, 0.5rem + 7vw, 5rem);
    font-weight: 500;
  }
  .last-line {
    grid-column: span 2;
    display: flex;
    justify-content: space-between;

    font-size: clamp(0.75rem, 2vw, 1rem);
    font-weight: 300;
  }

  @media (min-width: 52rem) {
    .footer {
      padding: 4.25rem 4.9rem 2rem 4.9rem;
      gap: 0;
    }
  }
</style>
