<style>
  /* link animation */
  .header-link {
    position: relative;
    text-decoration: none;
  }

  .header-link::before {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 1.5px;
    bottom: 0;
    left: 0;
    background-color: var(--color-neutral);
    transform: scaleX(0);
    transform-origin: top left;
    transition: all 0.25s ease-in-out 0s;
  }
  .header-link:hover::before {
    transform: scaleX(1);
  }
  /* ------------------------- */
  .header-section {
    z-index: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;

    font-weight: 300;

    position: -webkit-sticky;
    position: sticky;
    top: 0;
    padding: 1.63rem;
    padding-bottom: 0.5rem;
  }

  /* border bar style */
  .header-section.float {
    margin: 1rem 3rem;
    border-radius: 2.4375rem;
    background: rgba(255, 255, 255, 0.3);
    box-shadow: 0px 5px 11.3px 0px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(1.649999976158142px);
  }

  .header-home {
    flex: 1 0 0;
  }

  .header-links {
    display: flex;
    gap: 0.875rem;

    flex: 0 1 0;
  }

  @media (min-width: 52rem) {
    .header-section {
      padding: 3rem 4.9rem;
      font-size: 1.25rem;
    }

    .header-links {
      gap: 3.2rem;
    }
  }
</style>
